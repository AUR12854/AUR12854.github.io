<script>
// çƒŸèŠ±åŠ¨ç”»
class Firework {
    constructor(canvas) {
        this.ctx = canvas.getContext('2d');
        this.particles = [];
    }

    launch() {
        // å®ç°ç²’å­ç³»ç»ŸåŠ¨ç”»
        const colors = ['#FF3366', '#FF9933', '#33CCFF'];
        setInterval(() => {
            this.ctx.clearRect(0, 0, 480, 300);
            this.particles.push({
                x: 240, y: 300,
                vx: Math.random()*4-2,
                vy: -Math.random()*8-4,
                color: colors[Math.floor(Math.random()*3)]
            });
            
            this.particles.forEach(p => {
                p.vy += 0.1;
                p.x += p.vx;
                p.y += p.vy;
                this.ctx.beginPath();
                this.ctx.arc(p.x, p.y, 2, 0, Math.PI*2);
                this.ctx.fillStyle = p.color;
                this.ctx.fill();
            });
        }, 50);
    }
}

// ç¥ç¦ç”Ÿæˆ
function showBlessing() {
    const name = prompt("è¯·è¾“å…¥ä½ çš„åå­—ï¼š");
    const blessings = [
        `ğŸ‰ ${name} æ–°æ˜¥å¿«ä¹ï¼<br>æ„¿æ‚¨äº‹ä¸šå¦‚æ—¥ä¸­å¤©ï¼Œå®¶åº­å¹¸ç¦ç¾æ»¡ï¼`,
        `ğŸ‰ ${name} é¾™å¹´å¤§å‰ï¼<br>è´¢æºæ»šæ»šæ¥ï¼Œå¥½è¿è¿è¿è½¬ï¼`
    ];
    document.getElementById("menu").innerHTML = 
        `<div class="blessing">${blessings[Math.floor(Math.random()*2)]}</div>
         <div class="btn" onclick="location.reload()">è¿”å›</div>`;
}

// ç”Ÿè‚–æŸ¥è¯¢
function showZodiac() {
    const year = prompt("è¯·è¾“å…¥å‡ºç”Ÿå¹´ä»½ï¼š");
    const zodiacs = ["çŒ´","é¸¡","ç‹—","çŒª","é¼ ","ç‰›","è™","å…”","é¾™","è›‡","é©¬","ç¾Š"];
    const idx = (year - 2020) % 12;
    document.getElementById("menu").innerHTML = 
        `<div class="result">
            ç”Ÿè‚–ï¼š${zodiacs[idx]}<br>
            è¿åŠ¿ï¼š${["å‰æ˜Ÿé«˜ç…§","å¿ƒæƒ³äº‹æˆ"][Math.floor(Math.random()*2)]}
         </div>
         <div class="btn" onclick="location.reload()">è¿”å›</div>`;
}

// åˆå§‹åŒ–
window.onload = () => {
    const canvas = document.getElementById('firework');
    canvas.width = 480; canvas.height = 300;
    new Firework(canvas).launch();
};
